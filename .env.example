# Environment Variables for Obsidian MCP Server
# Copy this file to .env and update with your actual values

# API Keys (comma-separated for multiple keys)
OBSIDIAN_API_KEYS=your-secret-api-key-here,another-api-key

# Vault Path
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault

# Server Configuration
OBSIDIAN_SERVER_HOST=0.0.0.0
OBSIDIAN_SERVER_PORT=8000
OBSIDIAN_LOG_LEVEL=INFO

# Optional: Override config file location
OBSIDIAN_CONFIG_PATH=config/config.yaml
